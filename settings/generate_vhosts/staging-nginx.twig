server {
	# Staging {{ staging_index }} ({{ project_code }})
	listen 80;
	server_name {{ domain }};
	root {{ document_root }};

	# -- for SSL
	# listen 443 ssl;
	# ssl_certificate /path/to/localhost.crt;
	# ssl_certificate_key /path/to/localhost.key;

	{% if path_htpasswd %}
		auth_basic "Please enter your ID and password";
		auth_basic_user_file {{ path_htpasswd }};
	{% endif %}
}
