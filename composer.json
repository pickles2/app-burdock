{
    "name": "pickles2/app-burdock",
    "description": "PHPサーバー+ブラウザ上で動作する Pickles 2 のGUIツール。Pickles Framework 2 に特化した CMSライクなテキストエディタ \"Pickles 2\" のウェブ版です。",
    "keywords": ["pickles2"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1.3",
        "barryvdh/laravel-debugbar": "^3.2",
        "chumper/zipper": "^1.0",
        "fideloper/proxy": "^4.0",
        "fzaninotto/faker": "^1.8",
        "laravel/framework": "5.7.*",
        "laravel/tinker": "^1.0",
        "pickles2/lib-indigo": "^0.1.4",
        "pickles2/lib-plum": "^0.2.0",
        "pickles2/px2agent": "^0.0",
        "pickles2/px2style": "^2.0",
        "predis/predis": "^1.1",
        "tomk79/burdock-project-manager": "^0.0",
        "tomk79/filesystem": "^1.0",
        "tomk79/remote-finder": "^0.0.5",
        "tomk79/search-in-directory": "~0.0",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.0",
        "filp/whoops": "^2.0",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "files": [
            "app/helpers/locale_url.php",
            "app/helpers/get_project_dir.php",
            "app/helpers/get_project_workingtree_dir.php",
            "app/helpers/git.php",
            "app/helpers/composer.php",
			"app/helpers/px2query.php",
			"app/helpers/get_px_execute_path.php"
        ],
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "start-echo-server": [
            "redis-server --daemonize yes",
            "pm2 start laravel-echo-server-pm2.json"
        ],
        "stop-echo-server": [
            "pm2 stop laravel-echo-server-pm2.json",
            "redis-cli shutdown"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
